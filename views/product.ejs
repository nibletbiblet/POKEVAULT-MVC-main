<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Google Font: Montserrat (Gotham-like) -->
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <link href="/theme.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Supermarket App - Product</title>
  <style>
    /* Keep layout consistent with inventory.ejs and index.ejs */
    body {
background-size: cover;
      background-position: center center;
      background-repeat: no-repeat;
      background-attachment: fixed;
      background-color: #111213;
      color: #fff;
      font-family: 'Montserrat', system-ui, -apple-system, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
      -webkit-font-smoothing:antialiased;
      -moz-osx-font-smoothing:grayscale;
    }
    body::before {
      content: '';
      position: fixed;
      inset: 0;
      background: rgba(0,0,0,0.45);
      pointer-events: none;
      z-index: 0;
    }
    .custom-navbar {
      background-color: transparent !important;
      padding-top: 1.05rem;
      padding-bottom: 1.05rem;
      min-height: 80px;
      z-index: 1030;
      box-shadow: none;
    }
    .custom-navbar .navbar-brand { font-weight:700; letter-spacing: -0.01em; }
    
    /* Frosted card for product details */
    .product-card {
      margin: 0.75rem auto;
      max-width: 900px;
      background: radial-gradient(70% 110% at 15% 20%, rgba(109,210,255,0.07), transparent), rgba(255,255,255,0.04);
      -webkit-backdrop-filter: blur(8px);
      backdrop-filter: blur(8px);
      border-radius: 0.8rem;
      padding: 0.85rem;
      color: rgba(255,255,255,0.95);
      box-shadow: 0 8px 28px rgba(0,0,0,0.48);
      border: 1px solid rgba(255,255,255,0.05);
    }

    .eyebrow {
      text-transform: uppercase;
      letter-spacing: 0.16em;
      font-size: 0.65rem;
      color: rgba(255,255,255,0.6);
      font-weight: 700;
    }

    .product-title {
      font-size: 1.35rem;
      font-weight: 800;
      margin: 0.05rem 0 0.3rem;
      color: #fff;
      letter-spacing: -0.01em;
    }

    .product-pills {
      display: flex;
      flex-wrap: wrap;
      gap: 0.4rem;
    }

    .pill {
      display: inline-flex;
      align-items: center;
      gap: 0.35rem;
      padding: 0.3rem 0.65rem;
      border-radius: 999px;
      font-weight: 700;
      font-size: 0.75rem;
      letter-spacing: 0.02em;
      border: 1px solid rgba(255,255,255,0.14);
      background: rgba(255,255,255,0.08);
      color: #fff;
    }
    .rarity-common { background: linear-gradient(120deg, #4b5563 0%, #6b7280 100%); }
    .rarity-uncommon { background: linear-gradient(120deg, #0ea5e9 0%, #38bdf8 100%); }
    .rarity-rare { background: linear-gradient(120deg, #6366f1 0%, #8b5cf6 100%); }
    .rarity-ultra-rare { background: linear-gradient(120deg, #f97316 0%, #fb7185 100%); }
    .rarity-secret-rare { background: linear-gradient(120deg, #f59e0b 0%, #fbbf24 100%); color: #1f2937; }

    .price-tag {
      background: linear-gradient(135deg, #6dd2ff, #7df3d4);
      color: #001018;
      padding: 0.55rem 0.85rem;
      border-radius: 0.65rem;
      box-shadow: 0 5px 14px rgba(0,0,0,0.38);
      font-weight: 800;
      font-size: 1rem;
      min-width: 120px;
      text-align: center;
    }

    .product-image-frame {
      background: rgba(255,255,255,0.03);
      border: 1px solid rgba(255,255,255,0.08);
      border-radius: 0.75rem;
      padding: 0.5rem;
      box-shadow: inset 0 0 0 1px rgba(255,255,255,0.02), 0 7px 20px rgba(0,0,0,0.38);
    }

    .product-image {
      max-width: 100%;
      max-height: 180px;
      border-radius: 0.7rem;
      object-fit: cover;
      display: block;
      margin: 0 auto;
    }

    .info-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
      gap: 0.5rem;
      margin: 0.6rem 0;
    }

    .info-card {
      border: 1px solid rgba(255,255,255,0.06);
      border-radius: 0.6rem;
      padding: 0.55rem 0.75rem;
      background: rgba(255,255,255,0.03);
      box-shadow: inset 0 0 0 1px rgba(255,255,255,0.02);
    }

    .info-label {
      font-size: 0.75rem;
      letter-spacing: 0.03em;
      color: rgba(255,255,255,0.65);
      text-transform: uppercase;
      font-weight: 700;
      margin-bottom: 0.25rem;
      display: block;
    }

    .info-value {
      font-weight: 700;
      color: #fff;
      letter-spacing: -0.01em;
    }

    .brand-logo {
      font-family: 'Montserrat', system-ui, sans-serif;
      display: inline-flex;
      flex-direction: column;
      text-align: center;
      text-decoration: none;
      line-height: 1.05;
      padding-left: 0.1rem;
    }

    .brand-main {
      font-size: 1.45rem;
      font-weight: 700;
      letter-spacing: 0.33em;
      text-transform: uppercase;
      color: #ffffff;
    }

    .brand-sub {
      font-size: 0.68rem;
      font-weight: 500;
      letter-spacing: 0.28em;
      text-transform: uppercase;
      color: rgba(255,255,255,0.75);
      margin-top: 0.15rem;
    }

    footer.site-footer {
      background: #0b0c0d;
      color: #fff;
      padding-top: 2.5rem;
      padding-bottom: 2.5rem;
      margin-top: 0;
      border-top: 1px solid rgba(255,255,255,0.03);
      z-index: 1025;
    }
    
    a, .nav-link { color: rgba(255,255,255,0.95); }
    .btn-back { margin-top: 1.5rem; }

    .quantity-input-group {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      background: rgba(255,255,255,0.08);
      border-radius: 0.4rem;
      padding: 0.3rem;
      border: 1px solid rgba(255,255,255,0.1);
    }

    .quantity-input-group button {
      width: 32px;
      height: 32px;
      padding: 0;
      border: none;
      background: transparent;
      color: #fff;
      font-weight: 600;
      cursor: pointer;
      border-radius: 0.3rem;
      transition: background 160ms ease;
      font-size: 1.1rem;
    }

    .quantity-input-group button:hover {
      background: rgba(255,255,255,0.15);
    }

    .quantity-input-group input {
      width: 60px;
      text-align: center;
      border: none;
      background: transparent;
      color: #fff;
      font-weight: 600;
      font-size: 1rem;
      padding: 0.25rem;
    }

    .quantity-input-group input:focus { outline: none; }

    .toast-container {
      position: fixed;
      top: 16px;
      right: 16px;
      z-index: 2000;
    }

    .toast-notification {
      background: rgba(255, 255, 255, 0.95);
      color: #000000;
      padding: 0.85rem 1.25rem;
      border-radius: 0.5rem;
      box-shadow: 0 8px 24px rgba(0,0,0,0.4);
      margin-bottom: 0.6rem;
      border: 1px solid rgba(255,255,255,0.1);
      font-weight: 500;
      animation: slideIn 260ms ease-out, slideOut 260ms ease-out 2600ms forwards;
    }

    @keyframes slideIn {
      from { transform: translateX(300px); opacity: 0; }
      to   { transform: translateX(0); opacity: 1; }
    }

    @keyframes slideOut {
      from { transform: translateX(0); opacity: 1; }
      to   { transform: translateX(300px); opacity: 0; }
    }

  </style>
</head>
<body class="theme-gradient d-flex flex-column min-vh-100">
  <div class="toast-container" id="toastContainer"></div>
  <a class="visually-hidden-focusable" href="#main-content">Skip to main content</a>
  <nav class="navbar navbar-expand-sm navbar-dark bg-dark custom-navbar">
    <div class="container-fluid" role="navigation" aria-label="Main navigation">
      <a class="navbar-brand brand-logo" href="/">
        <span class="brand-main">PokeVault</span>
        <span class="brand-sub">SINGAPORE</span>
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar" aria-controls="collapsibleNavbar" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav ms-auto">
          <% if (user.role === 'admin') { %>
            <li class="nav-item me-2">
              <a class="nav-link" href="/addProduct">Add Product</a>
            </li>
          <% } %>
          <li class="nav-item d-flex align-items-center me-3">
            <span class="text-light small">Signed in as <strong><%= user.username %></strong></span>
          </li>
          <% if (user.role !== 'admin') { %>
            <li class="nav-item me-2">
              <a class="btn btn-outline-light btn-sm" href="/orders">My Orders</a>
            </li>
          <% } %>
          <li class="nav-item">
            <a class="btn btn-outline-light btn-sm" href="/logout">Logout</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <main id="main-content" class="container flex-grow-1 py-4" role="main">
    <% const reviewAvg = (typeof reviewStats !== 'undefined' && reviewStats && reviewStats.avg) ? Number(reviewStats.avg).toFixed(1) : '0.0'; %>
    <% const reviewCount = (typeof reviewStats !== 'undefined' && reviewStats && reviewStats.count) ? reviewStats.count : 0; %>
    <% if (product) { %>
      <div class="product-card">
        <div class="d-flex justify-content-between align-items-start flex-wrap gap-3 mb-3">
          <div>
            <div class="eyebrow">Product</div>
            <div class="product-title"><%= product.productName %></div>
            <div class="product-pills">
              <% const rarityClass = (product.rarity || '').toLowerCase().replace(/[^a-z0-9]+/g, '-'); %>
              <span class="pill rarity-<%= rarityClass %>"><%= product.rarity || 'Unspecified rarity' %></span>
              <span class="pill">★ <%= reviewAvg %> (<%= reviewCount %>)</span>
            </div>
          </div>
          <div class="price-tag">$<%= product.price.toFixed(2) %></div>
        </div>

        <div class="row g-4 align-items-center">
          <div class="col-lg-6">
            <div class="product-image-frame">
              <img class="product-image" src="/images/<%= product.image %>" alt="<%= product.productName %>" />
            </div>
          </div>
          
          <div class="col-lg-6">
            <div class="info-grid">
              <div class="info-card">
                <span class="info-label">Rarity</span>
                <span class="info-value"><%= product.rarity || 'Unspecified rarity' %></span>
              </div>
            </div>

            <% if (user.role === 'admin') { %>
              <div class="d-flex gap-2 flex-wrap mt-2">
                <a class="btn btn-outline-light" href="/updateProduct/<%= product.id %>">Edit</a>
                <a class="btn btn-danger admin-delete-product" href="/deleteProduct/<%= product.id %>" data-name="<%= product.productName %>">Delete</a>
              </div>
            <% } else { %>
              <div class="product-detail">
                <label>Quantity</label>
                <div class="quantity-input-group">
                  <button type="button" onclick="decrementQty('quantity-input')">-</button>
                  <input type="number" id="quantity-input" name="quantity" value="1" min="1" readonly>
                  <button type="button" onclick="incrementQty('quantity-input')">+</button>
                </div>
              </div>

              <div class="d-flex gap-2 flex-wrap mt-2">
                <form action="/add-to-cart/<%= product.id %>" method="POST" onsubmit="document.getElementById('qty-hidden').value = document.getElementById('quantity-input').value">
                  <input type="hidden" name="quantity" id="qty-hidden" value="1">
                  <button type="submit" class="btn btn-outline-light">Buy</button>
                </form>
                <button type="button" class="btn btn-outline-light" onclick="addToCartWithNotification('<%= product.id %>', '<%= product.productName %>')">Add to Cart</button>
              </div>
            <% } %>

          </div>
        </div>
        
        <div class="btn-back text-center">
          <% if (user.role === 'admin') { %>
            <a class="btn btn-outline-light" href="/inventory">Back to Inventory</a>
          <% } else { %>
            <a class="btn btn-outline-light" href="/shopping">Back to Shopping</a>
          <% } %>
        </div>
      </div>

      <div class="product-card mt-3">
        <h5 class="mb-2">Reviews</h5>

        <% const reviewErrs = (typeof reviewErrors !== 'undefined' && Array.isArray(reviewErrors)) ? reviewErrors : []; %>
        <% const reviewMsgs = (typeof reviewSuccess !== 'undefined' && Array.isArray(reviewSuccess)) ? reviewSuccess : []; %>
        <% if (reviewErrs.length) { %>
          <div class="alert alert-danger py-2">
            <% reviewErrs.forEach(function(err) { %>
              <div><%= err %></div>
            <% }); %>
          </div>
        <% } %>
        <% if (reviewMsgs.length) { %>
          <div class="alert alert-success py-2">
            <% reviewMsgs.forEach(function(msg) { %>
              <div><%= msg %></div>
            <% }); %>
          </div>
        <% } %>

        <% if (user && user.role !== 'admin') { %>
          <form class="mb-3" action="/product/<%= product.id %>/reviews" method="POST">
            <div class="row g-2">
              <div class="col-12 col-md-4">
                <label class="form-label text-white-50 small">Rating</label>
                <select name="rating" class="form-select" required>
                  <option value="">Select</option>
                  <% for (let r = 5; r >= 1; r--) { %>
                    <option value="<%= r %>"><%= r %> Star<%= r > 1 ? 's' : '' %></option>
                  <% } %>
                </select>
              </div>
              <div class="col-12 col-md-8">
                <label class="form-label text-white-50 small">Comment</label>
                <textarea name="comment" class="form-control" rows="2" maxlength="500" required placeholder="Share your experience..."></textarea>
              </div>
            </div>
            <button type="submit" class="btn btn-outline-light btn-sm mt-2">Submit Review</button>
          </form>
        <% } else { %>
          <p class="text-white-50 small">Sign in as a customer to leave a review.</p>
        <% } %>

        <% const reviewList = (typeof reviews !== 'undefined' && Array.isArray(reviews)) ? reviews : []; %>
        <% if (reviewList.length) { %>
          <div class="list-group">
            <% reviewList.forEach(function(rv) { %>
              <div class="list-group-item bg-transparent text-white border-secondary">
                <div class="d-flex justify-content-between align-items-center">
                  <div>
                    <div class="fw-semibold"><%= rv.name %></div>
                    <div class="text-white-50 small"><%= new Date(rv.createdAt).toLocaleString() %></div>
                  </div>
                  <div class="d-flex align-items-center gap-2">
                    <div class="text-warning fw-semibold">? <%= rv.rating %></div>
                    <% if (user && (user.role === 'admin' || (rv.userId && rv.userId === user.id))) { %>
                      <form action="/product/<%= product.id %>/reviews/<%= rv.id %>/delete" method="POST" onsubmit="return confirm('Delete this review?');">
                        <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                      </form>
                    <% } %>
                  </div>
                </div>
                <p class="mb-0 mt-1"><%= rv.comment %></p>
              </div>
            <% }); %>
          </div>
        <% } else { %>
          <p class="text-white-50 small mb-0">No reviews yet. Be the first to review this product.</p>
        <% } %>
      </div>
    <% } else { %>
      <div class="product-card text-center">
        <p>No product found.</p>
        <a class="btn btn-outline-light" href="/shopping">Back to Shopping</a>
      </div>
    <% } %>
  </main>

  <script>
    function incrementQty(id) {
      const input = document.getElementById(id);
      if (!input) return;
      const current = parseInt(input.value, 10) || 1;
      input.value = current + 1;
    }

    function decrementQty(id) {
      const input = document.getElementById(id);
      if (!input) return;
      const current = parseInt(input.value, 10) || 1;
      input.value = Math.max(1, current - 1);
    }

    function showToast(message) {
      const container = document.getElementById('toastContainer');
      if (!container) return;
      const toast = document.createElement('div');
      toast.className = 'toast-notification';
      toast.textContent = message;
      container.appendChild(toast);
      setTimeout(() => toast.remove(), 3000);
    }

    async function addToCartWithNotification(productId, productName) {
      const qtyInput = document.getElementById('quantity-input');
      const quantity = qtyInput ? Math.max(1, parseInt(qtyInput.value, 10) || 1) : 1;
      try {
        const res = await fetch(`/add-to-cart/${productId}`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
          body: `quantity=${encodeURIComponent(quantity)}`
        });
        if (!res.ok) throw new Error('Request failed');
        showToast(`${productName} x${quantity} added to cart`);
      } catch (err) {
        console.error(err);
        showToast('Could not add to cart. Please try again.');
      }
    }

    // Admin delete via AJAX to show toast
    (function() {
      const btn = document.querySelector('.admin-delete-product');
      if (!btn) return;
      btn.addEventListener('click', async (e) => {
        e.preventDefault();
        const name = btn.dataset.name || 'this product';
        if (!confirm(`Delete ${name}?`)) return;
        try {
          const res = await fetch(btn.href, { method: 'GET' });
          if (!res.ok) throw new Error('Delete failed');
          showToast(`${name} deleted`);
          setTimeout(() => window.location.href = '/inventory', 600);
        } catch (err) {
          console.error(err);
          showToast('Could not delete product. Please try again.');
        }
      });
    })();
  </script>

  <footer class="site-footer mt-auto">
  <div class="container text-center">
    <p class="mb-1">Connecting Pokémon card collectors worldwide — shop, sell, and trade in a safe and growing community.</p>
    <small class="small">© <%= new Date().getFullYear() %> PokéVault. All rights reserved.</small>
  </div>
</footer>
</body>
</html>
