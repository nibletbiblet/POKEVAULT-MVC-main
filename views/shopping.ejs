    </div>
  </nav>

  <a class="visually-hidden-focusable" href="#main-content">Skip to main content</a>

  <main id="main-content" class="container flex-grow-1 py-4 page-shell" role="main">

    <% const topThree = Array.isArray(bestSellers) ? bestSellers : []; %>
    <% if (topThree.length) { %>
      <section class="mb-4">
        <div class="best-hero">
          <div class="d-flex justify-content-between align-items-center mb-3 flex-wrap gap-2">
            <div>
              <div class="text-white-50 text-uppercase small fw-bold">Top Picks</div>
              <h5 class="fw-bold text-white mb-0">Best Sellers</h5>
            </div>
          </div>
          <div class="row g-3 g-md-4">
            <% for(let i=0; i < topThree.length; i++) { %>
              <% const prod = topThree[i]; %>
              <% const stat = (reviewStatsMap && reviewStatsMap[prod.id]) ? reviewStatsMap[prod.id] : { avg: 0, count: 0 }; %>
              <% const discountPct = prod.discountPercent; %>
              <% const hasDiscount = discountPct !== null && discountPct !== undefined && Number(discountPct) > 0; %>
              <% const effectivePrice = hasDiscount ? Number(prod.price) * (1 - Number(discountPct)/100) : Number(prod.price); %>
              <% const rarityClass = (prod.rarity || '').toLowerCase().replace(/[^a-z0-9]+/g, '-'); %>
              <div class="col-12 col-md-4">
              <article class="best-card best-card-hover h-100 d-flex flex-column p-3">
                  <div class="d-flex align-items-start mb-3">
                    <img class="best-thumb me-3" src="/images/<%= prod.image %>" alt="<%= prod.productName %>" />
                    <div>
                      <a class="product-name d-block" href="/product/<%= prod.id %>"><%= prod.productName %></a>
                      <div class="pill-stack">
                        <% if (prod.rarity) { %>
                          <span class="rarity-pill rarity-<%= rarityClass %>"><%= prod.rarity %></span>
                        <% } %>
                        <span class="rating-pill">? <%= Number(stat.avg || 0).toFixed(1) %> (<%= stat.count || 0 %>)</span>
                      </div>
                      <div class="product-price">
                        <% if (hasDiscount) { %>
                          <span style="text-decoration: line-through; color: #ff6b6b; font-size:0.9rem;">$<%= Number(prod.price).toFixed(2) %></span>
                          <span class="ms-2">$<%= effectivePrice.toFixed(2) %></span>
                        <% } else { %>
                          $<%= Number(prod.price).toFixed(2) %>
                        <% } %>
                      </div>
                    </div>
                  </div>
                  <div class="d-flex justify-content-between align-items-center mb-3">
                    <span class="text-uppercase fw-semibold text-white-50 small">Quantity</span>
                    <div class="quantity-input-group">
                      <button type="button" onclick="decrementQty('quantity-top-<%= prod.id %>')">-</button>
                      <input type="number" id="quantity-top-<%= prod.id %>" name="quantity" value="1" min="1" max="<%= Number(prod.quantity) || 0 %>" data-max="<%= Number(prod.quantity) || 0 %>" readonly>
                      <button type="button" onclick="incrementQty('quantity-top-<%= prod.id %>')">+</button>
                    </div>
                  </div>
                  <div class="card-actions mt-auto d-flex gap-2">
                    <form class="flex-grow-1" action="/add-to-cart/<%= prod.id %>" method="POST" onsubmit="document.getElementById('qty-top-<%= prod.id %>').value = document.getElementById('quantity-top-<%= prod.id %>').value">
                      <input type="hidden" name="quantity" id="qty-top-<%= prod.id %>" value="1">
                      <button type="submit" class="btn btn-neon btn-sm w-100">Buy</button>
                    </form>
                    <button type="button" class="btn btn-neon-ghost btn-sm w-100" onclick="addToCartWithNotification(event, '<%= prod.id %>', '<%= prod.productName %>')">
                      Add to Cart
                    </button>
                  </div>
                </article>
              </div>
            <% } %>
          </div>
        </div>
      </section>
    <% } %>
    <div class="inventory-actions mb-3">
      <div class="row g-2 align-items-center">
        <div class="col-12 col-md-6 col-lg-4">
          <input id="productSearch" type="search" class="form-control form-control-sm search-box" placeholder="Search products..." aria-label="Search products">
        </div>
        <div class="col-12 col-md-3 col-lg-3">
          <select id="rarityFilter" class="form-select form-select-sm filter-select" aria-label="Filter by rarity">
            <option value="">All rarities</option>
          </select>
        </div>
        <div class="col-12 col-md-3 col-lg-3">
          <select id="sortSelect" class="form-select form-select-sm filter-select" aria-label="Sort products">
            <option value="">Sort: Recommended</option>
            <option value="price-asc">Price: Ascending</option>
            <option value="price-desc">Price: Decending</option>
            <option value="rating-desc">Rating: Decending</option>
            <option value="rating-asc">Rating: Ascending</option>
            <option value="best">Best Selling</option>
          </select>
        </div>
      </div>
    </div>

    <div class="inventory-grid">
      <div class="row g-3 g-md-4">
        <% const statsMap = (typeof reviewStatsMap !== 'undefined' && reviewStatsMap) ? reviewStatsMap : {}; %>
        <% if (products && products.length) { %>
          <% for(let i=0; i < products.length; i++) { %>
            <% const stock = Number(products[i].quantity) || 0; %>
            <% const isOut = stock <= 0; %>
            <% const stat = statsMap[products[i].id] || { avg: 0, count: 0 }; %>
            <% const discountPct = products[i].discountPercent; %>
            <% const hasDiscount = discountPct !== null && discountPct !== undefined && Number(discountPct) > 0; %>
            <% const effectivePrice = hasDiscount ? Number(products[i].price) * (1 - Number(discountPct)/100) : Number(products[i].price); %>
            <% const rarityClass = (products[i].rarity || '').toLowerCase().replace(/[^a-z0-9]+/g, '-'); %>
            <div
              class="col-12 col-sm-6 col-lg-4 col-xl-3 product-card-wrapper"
              data-search="<%= (products[i].productName + ' ' + (products[i].rarity || '')).toLowerCase() %>"
              data-rarity="<%= (products[i].rarity || '').toLowerCase() %>"
              data-price="<%= effectivePrice %>"
              data-rating="<%= stat.avg || 0 %>"
              data-sales="<%= stat.count || 0 %>"
            >
              <article class="product-card h-100 d-flex flex-column p-3">
                <div class="d-flex align-items-start mb-3">
                  <img class="product-thumb me-3" src="/images/<%= products[i].image %>" alt="<%= products[i].productName %>" />
                  <div>
                    <a class="product-name d-block" href="/product/<%= products[i].id %>"><%= products[i].productName %></a>
                    <div class="pill-stack">
                      <% if (products[i].rarity) { %>
                        <span class="rarity-pill rarity-<%= rarityClass %>"><%= products[i].rarity %></span>
                      <% } %>
                      <span class="rating-pill">★ <%= Number(stat.avg || 0).toFixed(1) %> (<%= stat.count || 0 %>)</span>
                    </div>
                    <div class="product-price">
                      <% if (hasDiscount) { %>
                        <span style="text-decoration: line-through; color: #ff6b6b; font-size:0.9rem;">$<%= Number(products[i].price).toFixed(2) %></span>
                        <span class="ms-2">$<%= effectivePrice.toFixed(2) %></span>
                      <% } else { %>
                        $<%= Number(products[i].price).toFixed(2) %>
                      <% } %>
                    </div>
                  </div>
                </div>
                <div class="d-flex align-items-center justify-content-between mb-3">
                  <span class="text-uppercase fw-semibold text-white-50 small">Quantity</span>
                  <div class="quantity-input-group">
                    <button type="button" onclick="decrementQty('quantity-<%= products[i].id %>')" <%= isOut ? 'disabled' : '' %>>-</button>
                    <input type="number" id="quantity-<%= products[i].id %>" name="quantity" value="<%= isOut ? 0 : 1 %>" min="1" max="<%= stock %>" data-max="<%= stock %>" readonly <%= isOut ? 'disabled' : '' %>>
                    <button type="button" onclick="incrementQty('quantity-<%= products[i].id %>')" <%= isOut ? 'disabled' : '' %>>+</button>
                  </div>
                </div>
                <div class="card-actions mt-auto d-flex gap-2">
                  <form class="flex-grow-1" action="/add-to-cart/<%= products[i].id %>" method="POST" onsubmit="document.getElementById('qty-<%= products[i].id %>').value = document.getElementById('quantity-<%= products[i].id %>').value">
                    <input type="hidden" name="quantity" id="qty-<%= products[i].id %>" value="<%= isOut ? 0 : 1 %>">
                    <button type="submit" class="btn btn-neon btn-sm w-100" <%= isOut ? 'disabled aria-disabled=\"true\"' : '' %>><%= isOut ? 'Out of Stock' : 'Buy' %></button>
                  </form>
                  <button type="button" class="btn btn-neon-ghost btn-sm w-100" onclick="addToCartWithNotification(event, '<%= products[i].id %>', '<%= products[i].productName %>')" <%= isOut ? 'disabled aria-disabled=\"true\"' : '' %> data-out="<%= isOut %>">
                    <%= isOut ? 'Out of Stock' : 'Add to Cart' %>
                  </button>
                </div>
              </article>
            </div>
          <% } %>
        <% } else { %>
          <div class="col-12">
            <div class="text-center text-white-50 py-5">
              <p class="mb-1 fw-semibold">No products found</p>
              <small class="text-white-50">Browse again later.</small>
            </div>
          </div>
        <% } %>
      </div>
    </div>
  </main>

  <script>
    // Quantity controls
    function incrementQty(id) {
      const input = document.getElementById(id);
      if (!input) return;
      const current = parseInt(input.value, 10) || 1;
      const max = parseInt(input.dataset.max, 10);
      const next = current + 1;
      input.value = Number.isFinite(max) ? Math.min(max, next) : next;
    }

    function decrementQty(id) {
      const input = document.getElementById(id);
      if (!input) return;
      const current = parseInt(input.value, 10) || 1;
      input.value = Math.max(1, current - 1);
    }

    // Simple toast notifications
    function showToast(message) {
      const container = document.getElementById('toastContainer');
      if (!container) return;
      const toast = document.createElement('div');
      toast.className = 'toast-notification';
      toast.textContent = message;
      container.appendChild(toast);
      setTimeout(() => toast.remove(), 3200);
    }

    // Add to cart via fetch so button feels responsive
    async function addToCartWithNotification(evt, productId, productName) {
      const addButton = evt && evt.currentTarget;
      if (addButton && addButton.dataset.out === 'true') {
        return;
      }

      const qtyInput = document.getElementById(`quantity-${productId}`);
      const max = qtyInput ? parseInt(qtyInput.dataset.max, 10) : null;
      const rawQty = qtyInput ? parseInt(qtyInput.value, 10) : 1;
      const quantity = qtyInput ? Math.max(1, Math.min(max || Infinity, rawQty || 1)) : 1;
      try {
        const res = await fetch(`/add-to-cart/${productId}`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
          body: `quantity=${encodeURIComponent(quantity)}`
        });
        if (!res.ok) throw new Error('Request failed');
        showToast(`${productName} (x${quantity}) added to cart!`);
      } catch (err) {
        console.error(err);
        showToast('Could not add to cart. Please try again.');
      }
    }

    // Client-side filter and sort for product cards by name/rarity/rating/price
    (function() {
      const searchInput = document.getElementById('productSearch');
      const categorySelect = document.getElementById('rarityFilter');
      const sortSelect = document.getElementById('sortSelect');
      if (!searchInput || !categorySelect) return;

      const cards = Array.from(document.querySelectorAll('.product-card-wrapper'));
      const gridRow = document.querySelector('.inventory-grid .row');

      const categories = new Set();
      cards.forEach(card => {
        const cat = (card.dataset.rarity || '').trim();
        if (cat) categories.add(cat);
      });
      Array.from(categories).sort().forEach(cat => {
        const opt = document.createElement('option');
        opt.value = cat;
        opt.textContent = cat.charAt(0).toUpperCase() + cat.slice(1);
        categorySelect.appendChild(opt);
      });

      function applyFilterAndSort() {
        const term = searchInput.value.trim().toLowerCase();
        const cat = categorySelect.value.trim();
        const visible = [];
        cards.forEach(card => {
          const termSpace = card.dataset.search || '';
          const cardCat = card.dataset.rarity || '';
          const matchesTerm = termSpace.includes(term);
          const matchesCategory = !cat || cardCat === cat;
          const show = matchesTerm && matchesCategory;
          card.style.display = show ? '' : 'none';
          if (show) visible.push(card);
        });

        if (sortSelect && gridRow) {
          const sortVal = sortSelect.value;
          visible.sort((a, b) => {
            const priceA = Number(a.dataset.price || 0);
            const priceB = Number(b.dataset.price || 0);
            const ratingA = Number(a.dataset.rating || 0);
            const ratingB = Number(b.dataset.rating || 0);
            const salesA = Number(a.dataset.sales || 0);
            const salesB = Number(b.dataset.sales || 0);
            switch (sortVal) {
              case 'price-asc': return priceA - priceB;
              case 'price-desc': return priceB - priceA;
              case 'rating-desc': return ratingB - ratingA;
              case 'rating-asc': return ratingA - ratingB;
              case 'best':
                if (salesB !== salesA) return salesB - salesA;
                return ratingB - ratingA;
              default: return 0;
            }
          });
          visible.forEach(card => gridRow.appendChild(card));
        }
      }

      searchInput.addEventListener('input', applyFilterAndSort);
      categorySelect.addEventListener('change', applyFilterAndSort);
      if (sortSelect) sortSelect.addEventListener('change', applyFilterAndSort);

      applyFilterAndSort();
    })();
  </script>


